@model SalaryPortal.Models.EmployeeViewModel

<h2>Delete</h2>

<form asp-action="DeleteConfirmed" method="post">
    <div>
        <p>Are you sure you want to delete this salary?</p>
        <input type="hidden" asp-for="Salary_Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Edit" asp-route-id="@Model.Salary_Id">Cancel</a>
    </div>
</form>
